<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AirClipCCL.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:OperationDetailsViewModel"
             x:Class="AirClipCCL.Views.MergeDetails">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Spacing="10" Margin="5">
            <TextBlock Text="Video Paths:" VerticalAlignment="Center"/>
            <TextBox FontSize="10" Width="150" MinHeight="1" Text="{Binding VideoPathInput}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
