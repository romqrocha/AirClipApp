<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AirClipCCL.ViewModels"
             xmlns:views="clr-namespace:AirClipCCL.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AirClipCCL.Views.ScrollableSelectionRow"
             x:DataType="viewModels:ScrollableSelectionRowViewModel">
    <ScrollViewer>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" 
                    Orientation="Horizontal">
            <views:ButtonIcon IconLabel="Cut"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
