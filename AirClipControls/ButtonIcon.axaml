<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:AirClipControls">

    <!-- axaml that will be displayed in the designer, 
     it can be used for prototyping and visualizing the use of a template -->
    <Design.PreviewWith>
        <controls:ButtonIcon />
    </Design.PreviewWith>

    <ControlTheme x:Key="AirClipButtonIcon" TargetType="controls:ButtonIcon">
        <Setter Property="Template">
            <ControlTemplate>
                <Expander
                    HorizontalAlignment="Stretch">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox 
                                IsVisible="{TemplateBinding CheckboxVisible}" 
                                IsChecked="{TemplateBinding IsChecked}"/>
                            <Label Content="{TemplateBinding ExpanderName}"/>
                        </StackPanel>
                    </Expander.Header>
                    <Label Content="{TemplateBinding Content}"/>
                </Expander>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>